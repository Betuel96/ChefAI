
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regla general: Nadie puede leer o escribir por defecto.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Permitir a los usuarios autenticados gestionar sus propios archivos.
    // La ruta coincide con la estructura que usamos: users/{userId}/{...}
    match /users/{userId}/{allPaths=**} {
      // El usuario puede leer y escribir (subir, eliminar) en su propia carpeta.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
