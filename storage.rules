rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow reads and writes for any authenticated user on any path.
    // This is suitable for development. For production, you'll want
    // to restrict this further, e.g., match /users/{userId}/{allPaths=**}
    // and check `if request.auth.uid == userId`.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
