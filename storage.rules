rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir la subida de archivos solo a usuarios autenticados
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Hacer públicas las recetas, menús e historias publicadas para que cualquiera las pueda leer
    match /published_recipes/{postId}/{allPaths=**} {
      allow read;
    }
    match /stories/{storyId}/{allPaths=**} {
       allow read;
    }
  }
}
