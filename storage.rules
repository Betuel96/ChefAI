rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow reads from anyone. This is safe for public content like profile pictures and post media.
    match /{allPaths=**} {
      allow read;
    }

    // Allow an authenticated user to write to their own directory.
    // This covers profile pictures, posts, stories, recipes, etc.
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
