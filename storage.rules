
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que cualquier usuario autenticado lea y escriba en cualquier lugar.
    // Esta regla es permisiva y solo debe usarse para el desarrollo inicial.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
