
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite la lectura pública de todas las imágenes de los posts
    match /users/{userId}/posts/{postId} {
      allow read;
      // Permite la escritura (crear, actualizar, eliminar) solo si el usuario
      // está autenticado y es el propietario de la carpeta.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Permite la escritura de recetas guardadas solo para el propietario
    match /users/{userId}/recipes/{recipeId} {
        allow read;
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
