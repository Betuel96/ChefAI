rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ===== PUBLIC DATA =====
    // Cualquiera puede leer las recetas publicadas y los perfiles de usuario.
    match /published_recipes/{recipeId} {
      allow read: if true;
    }
    match /users/{userId} {
      allow get: if request.auth != null;
    }
    
    // ===== SECURED WRITES & PRIVATE DATA =====
    match /published_recipes/{recipeId} {
      // Solo usuarios verificados pueden crear recetas.
      allow create: if request.auth != null && request.auth.token.email_verified == true;
      // Solo el autor puede editar o borrar su receta.
      allow update, delete: if request.auth.uid == resource.data.publisherId;
    }

    match /users/{userId} {
      // Un usuario solo puede escribir en su propio perfil y datos privados.
      allow write: if request.auth.uid == userId;

      match /recipes/{recipeId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /menus/{menuId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /following/{targetId} {
          allow read: if request.auth != null;
          allow write: if request.auth.uid == userId;
      }
      match /followers/{followerId} {
          allow read: if request.auth != null;
          allow write: if request.auth.uid == followerId;
      }
    }
  }
}
