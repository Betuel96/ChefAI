rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users: Can read their own profile, can update their own profile. Anyone can read public profiles.
    match /users/{userId} {
      allow read: if request.auth != null; // Anyone authenticated can read any user's profile
      allow write: if request.auth.uid == userId; // Only the user can write to their own profile

      // Followers/Following subcollections
      match /followers/{followerId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == followerId; // A user can add themselves as a follower
      }
      match /following/{followingId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId; // A user can modify their own following list
      }
    }

    // User-specific recipes and menus
    match /users/{userId}/{collection}/{docId} {
      allow read, write, delete: if request.auth.uid == userId;
    }

    // Published recipes: Authenticated users can read. The owner can write/delete.
    match /published_recipes/{recipeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.token.email_verified == true;
      allow update, delete: if request.auth.uid == resource.data.publisherId;
    }
  }
}
