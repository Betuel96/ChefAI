rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funciones Auxiliares ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Colecciones Públicas ---
    match /published_recipes/{recipeId} {
      // Lectura: Cualquiera puede ver las publicaciones de la comunidad.
      allow read: if true;

      // Crear: Solo usuarios autenticados, y deben ser los publicadores.
      allow create: if isAuthenticated() && 
        request.auth.uid == request.resource.data.publisherId;

      // Actualizar/Eliminar: Solo el propietario de la publicación.
      allow update, delete: if isAuthenticated() && 
        request.auth.uid == resource.data.publisherId;
    }

    // --- Colecciones de Usuarios y Datos Privados ---
    match /users/{userId} {
      // Lectura: Cualquier usuario autenticado puede ver perfiles públicos.
      allow read: if isAuthenticated();

      // Escritura: Solo el propietario puede actualizar su perfil.
      allow write: if isOwner(userId);

      // --- Sub-colecciones de Datos Privados ---
      match /recipes/{recipeId} {
        // Solo el propietario puede gestionar sus recetas privadas.
        allow read, write, delete: if isOwner(userId);
      }
      
      match /menus/{menuId} {
        // Solo el propietario puede gestionar sus menús privados.
        allow read, write, delete: if isOwner(userId);
      }
      
      // --- Sub-colecciones Sociales (Seguidores/Seguidos) ---
      match /following/{targetUserId} {
        // Lectura: Cualquiera autenticado puede leer (para contadores).
        // Escritura: Solo el propietario del perfil puede modificar su lista de seguidos.
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
      
      match /followers/{followerId} {
        // Lectura: Cualquiera autenticado puede leer (para contadores).
        // Escritura: El seguidor es quien se añade/quita de la lista.
        allow read: if isAuthenticated();
        allow write: if isOwner(followerId);
      }
    }

    // --- Reglas adicionales para futuras funciones ---
    match /published_recipes/{recipeId}/comments/{commentId} {
      allow read: if true;
      allow create: if isAuthenticated() && 
        request.auth.uid == request.resource.data.userId;
      allow update, delete: if isAuthenticated() && 
        request.auth.uid == resource.data.userId;
    }

    match /published_recipes/{recipeId}/likes/{likeId} {
      allow read: if true;
      allow create: if isAuthenticated() && 
        request.auth.uid == request.resource.data.userId;
      allow delete: if isAuthenticated() && 
        request.auth.uid == resource.data.userId;
    }
  }
}
