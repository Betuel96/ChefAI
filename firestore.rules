rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Cualquier usuario autenticado puede leer los datos del perfil público.
      allow read: if request.auth != null;

      // Solo el propietario puede crear o actualizar su perfil.
      allow create, update: if request.auth.uid == userId;

      // Cualquiera puede leer recetas/menús (para páginas de perfil público), pero solo el propietario puede escribir.
      match /recipes/{recipeId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }
      match /menus/{menuId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }

      // Reglas para seguidores/seguidos
      // Cualquiera puede leer las listas (necesario para los contadores).
      match /followers/{followerId} {
        allow read: if request.auth != null;
        // Puedes añadirte o eliminarte a ti mismo como seguidor de alguien.
        allow write: if request.auth.uid == followerId;
      }
      match /following/{followingId} {
        allow read: if request.auth != null;
        // Solo puedes modificar tu propia lista de seguidos.
        allow write: if request.auth.uid == userId;
      }
    }

    match /published_recipes/{recipeId} {
      // Cualquier usuario autenticado puede leer recetas publicadas.
      allow read: if request.auth != null;
      
      // Solo el editor puede crear, actualizar o eliminar sus propias recetas.
      allow create: if request.auth.uid == request.resource.data.publisherId;
      allow update, delete: if request.auth.uid == resource.data.publisherId;
    }
  }
}
