
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla de Perfiles: Cualquiera puede leer perfiles, pero solo el dueño puede escribir en el suyo.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;

      // Subcolecciones de Usuario: Solo el dueño puede acceder a ellas.
      match /{allSubcollections=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Regla de Nombres de Usuario: Asegura que los nombres de usuario sean únicos.
    match /usernames/{username} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // Regla de Publicaciones: Cualquiera puede leer, pero solo el dueño puede editar/eliminar.
    match /published_recipes/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.publisherId;
      
      // Subcolecciones de Publicaciones (Comentarios, Me Gusta):
      match /{allSubcollections=**} {
          allow read: if true;
          allow write: if request.auth != null;
      }
    }

    // Regla de Historias: Cualquiera puede leer, los usuarios autenticados pueden crear.
    match /stories/{storyId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow delete: if request.auth != null && request.auth.uid == resource.data.publisherId;
    }
    
    // Regla de Solicitudes de Verificación: Los usuarios autenticados pueden crear, nadie más puede leer.
    match /verification_requests/{requestId} {
        allow read, write: if false; // Solo los administradores pueden acceder (vía reglas de backend/consola).
        allow create: if request.auth != null;
    }
    
    // Regla de Administradores: Solo los administradores pueden leer esta colección (se gestiona desde la consola).
    match /admins/{adminId} {
        allow read, write: if false; 
    }
  }
}
