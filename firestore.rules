rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funciones Auxiliares ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Colecciones Públicas ---
    match /published_recipes/{recipeId} {
      // Lectura: Cualquiera puede ver las publicaciones.
      allow read: if true;

      // Crear: Solo usuarios autenticados. La verificación de que el publisherId
      // coincide con el UID del solicitante es una buena práctica.
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.publisherId;

      // Actualizar/Eliminar: Solo el propietario de la publicación.
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.publisherId;
    }

    // --- Colecciones de Usuarios y Datos Privados ---
    match /users/{userId} {
      // Lectura: Cualquier usuario autenticado puede ver perfiles.
      allow read: if isAuthenticated();

      // Escritura: Solo el propietario puede actualizar su perfil.
      allow write: if isOwner(userId);

      // --- Sub-colecciones de Datos Privados ---
      match /recipes/{recipeId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      match /menus/{menuId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      // --- Sub-colecciones Sociales (Seguidores/Seguidos) ---
      match /following/{targetUserId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
      
      match /followers/{followerId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(followerId);
      }
    }
  }
}
