rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // AVISO: Esto permite que cualquiera pueda leer y escribir en tu base de datos.
    // Solo debe usarse para pruebas y depuraci√≥n inicial.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
