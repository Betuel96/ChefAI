
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para la colección de usuarios
    match /users/{userId} {
      // CUALQUIER usuario autenticado puede LEER la información de un perfil público.
      allow read: if request.auth != null;
      
      // SOLO el propietario del perfil puede ESCRIBIR (actualizar) su propia información.
      allow write: if request.auth.uid == userId;

      // Reglas para subcolecciones PRIVADAS de un usuario (recetas y menús)
      match /recipes/{recipeId} {
        // El usuario solo puede acceder a sus propias recetas.
        allow read, write, delete: if request.auth.uid == userId;
      }
      match /menus/{menuId} {
        // El usuario solo puede acceder a sus propios menús.
        allow read, write, delete: if request.auth.uid == userId;
      }

      // Reglas para subcolecciones PÚBLICAS de un usuario (seguidores y seguidos)
      match /followers/{followerId} {
        // Cualquiera puede leer quién sigue a quién.
        allow read: if request.auth != null;
        // Solo el usuario seguido (userId) o el seguidor (followerId) pueden crear/eliminar la relación.
        allow write: if request.auth.uid == userId || request.auth.uid == followerId;
      }
      match /following/{followingId} {
        // Cualquiera puede leer a quién sigue un usuario.
        allow read: if request.auth != null;
        // Solo el usuario que sigue (userId) o el seguido (followingId) pueden crear/eliminar la relación.
        allow write: if request.auth.uid == userId || request.auth.uid == followingId;
      }
    }

    // Reglas para la colección de recetas publicadas en la comunidad
    match /published_recipes/{recipeId} {
      // CUALQUIER usuario autenticado puede LEER las recetas publicadas.
      allow read: if request.auth != null;
      
      // Un usuario solo puede CREAR una receta si el ID del publicador coincide con su propio ID.
      allow create: if request.auth.uid == request.resource.data.publisherId;

      // Un usuario solo puede BORRAR una receta si es el publicador original.
      allow delete: if request.auth.uid == resource.data.publisherId;
      
      // No se permite actualizar una receta publicada para mantener la integridad.
      allow update: if false;
    }
  }
}
