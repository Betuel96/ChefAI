rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ===== Colección de Recetas Públicas (VERSIÓN DE PRUEBA) =====
    match /published_recipes/{recipeId} {
      allow read: if true;

      // PRUEBA DE DIAGNÓSTICO:
      // Se ha eliminado temporalmente `&& request.auth.token.email_verified == true`
      // para aislar el problema. Ahora solo comprueba si has iniciado sesión.
      allow create: if request.auth != null;

      allow update, delete: if request.auth.uid == resource.data.publisherId;
    }

    // ===== Datos de Usuario y Colecciones Privadas =====
    match /users/{userId} {
      allow get: if request.auth != null;
      allow write: if request.auth.uid == userId;

      match /recipes/{recipeId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /menus/{menuId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /following/{targetUserId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }
      match /followers/{followerId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == followerId;
      }
    }
  }
}
