rules_version = '2';

// REGLAS DE PRUEBA TEMPORALES - NO USAR EN PRODUCCIÓN
// Estas reglas están abiertas para permitir todas las lecturas y escrituras
// y así poder diagnosticar si el problema de permisos está en otro lugar.
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
