
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Los perfiles de usuario pueden ser leídos por cualquiera (para ver nombres, fotos).
    // Solo el propio usuario puede crear o actualizar su perfil.
    match /users/{userId} {
      allow read;
      allow create, update: if request.auth != null && request.auth.uid == userId;

      // Las recetas y menús privados solo los puede gestionar su dueño.
      match /recipes/{recipeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /menus/{menuId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Lógica para seguir/dejar de seguir a usuarios.
      match /followers/{followerId} {
        allow read;
        allow write: if request.auth != null && request.auth.uid == followerId;
      }
      match /following/{followingId} {
        allow read;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Las recetas publicadas las puede leer cualquiera.
    // Solo el autor original puede crearlas, actualizarlas o borrarlas.
    match /published_recipes/{recipeId} {
      allow read;
      allow create: if request.auth != null && request.resource.data.publisherId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.publisherId == request.auth.uid;
    }
  }
}
