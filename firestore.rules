rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas de Usuario:
    // - Los usuarios pueden leer y escribir su propio documento.
    // - Los usuarios pueden leer los documentos de otros (para los perfiles).
    match /users/{userId} {
      allow read;
      allow write: if request.auth.uid == userId;

      // Sub-colecciones de recetas y menús:
      // - Solo el propietario del perfil puede leer y escribir sus recetas/menús.
      match /{collection}/{docId} {
        allow read, write, delete: if request.auth.uid == userId;
      }

      // Sub-colecciones de seguimiento:
      // - Cualquier usuario autenticado puede leer/escribir en las listas de seguimiento.
      match /followers/{followerId} {
        allow read, write, delete: if request.auth != null;
      }
       match /following/{followingId} {
        allow read, write, delete: if request.auth != null;
      }
    }

    // Reglas de Recetas Públicas:
    // - Cualquier usuario autenticado puede leer todas las recetas publicadas.
    // - Los usuarios autenticados y con email verificado pueden crear recetas.
    // - Solo el autor de la receta puede actualizarla o eliminarla.
    match /published_recipes/{recipeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.token.email_verified == true;
      allow update, delete: if request.auth.uid == resource.data.publisherId;
    }
  }
}
