
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USERS collection
    // - Logged-in users can read public profile data.
    // - Only the user themselves can update their own data.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;

      // RECIPES subcollection
      // - Only the owner can read/write their own saved recipes.
      match /recipes/{recipeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // MENUS subcollection
      // - Only the owner can read/write their own saved menus.
      match /menus/{menuId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // FOLLOWING subcollection (People the user follows)
      // - Logged-in users can see who a user is following.
      // - Only the user can modify their own "following" list.
      match /following/{followedId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // FOLLOWERS subcollection (People who follow the user)
      // - Logged-in users can see who follows a user.
      // - A user can add/remove themselves from the followers list (required for the follow/unfollow batch operation).
      match /followers/{followerId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == followerId;
      }
    }

    // PUBLISHED_RECIPES collection
    // - Anyone can read published recipes.
    // - Only the authenticated owner can create, update, or delete their own published recipes.
    match /published_recipes/{recipeId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.publisherId;
    }
  }
}
